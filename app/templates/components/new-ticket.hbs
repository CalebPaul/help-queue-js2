{{#if addNewTicket}}
<h3>New Ticket</h3>
<div class="well">
  <form>

    <div class="form-group">
      <label for="student">Student</label>
      {{input class="form-control" value=student id="student"}}
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      {{input class="form-control" value=location id="location"}}
    </div>

    <div class="form-group">
      <label for="issue">Issue</label>
      {{textarea rows=10 class="form-control" value=issue id="issue"}}
    </div>

    <button class="btn btn-success" {{action 'saveTicket' ticket}}>Submit</button>
    <button class="btn btn-default" {{action 'ticketFormHide'}}>Hide</button>
  </form>
</div>
{{else}}
<div class="row">
  <div class="well">
    <button class="btn btn-info" {{action 'ticketFormShow'}}>Add Ticket</button>
  </div>
</div>
{{/if}}
